@model QuanLyDiem.Web.ViewModels.LoginViewModel

<div class="container ">
    <div class="row justify-content-between">
        <div class="col-1 col-md-2"></div>
        <div class="col-9 col-md-8 col-lg-5 border rounded shadow-1 shadow-2 p-4 p-sm-5 my-5 min-width">
            <form asp-controller="Home" asp-action="Index" method="post">
                <div class="form-outline mb-5">
                    <input type="email" id="form1Example1" class="form-control" asp-for="Email"/>
                    <label class="form-label" for="form1Example1" asp-for="Email">Email address</label>
                </div>

                <div class="form-outline mb-4">
                    <input type="password" id="form1Example2" class="form-control" asp-for="Password"/>
                    <label class="form-label" for="form1Example2" asp-for="Password">Password</label>
                </div>

                <div class="row mb-5">
                    <div class="col d-flex justify-content-between">
                        <div class="form-check">
                            <input
                                class="form-check-input"
                                type="checkbox"
                                value=""
                                id="form1Example3"
                                checked/>
                            <label class="form-check-label" for="form1Example3"> Remember me </label>
                        </div>
                    </div>

                    <div class="col d-flex justify-content-end">
                        <a href="#!">Forgot password?</a>
                    </div>
                </div>

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block">Sign in</button>
                @* <a asp-controller="StudentManager" asp-action="StudentList" class="btn btn-primary btn-block">Sign in</a>  *@
            </form>
        </div>
        <div class="col-1 col-md-2"></div>
    </div>
</div>