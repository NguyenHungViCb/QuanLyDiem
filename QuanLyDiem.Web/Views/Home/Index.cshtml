@model QuanLyDiem.Web.ViewModels.LoginViewModel

@* <div class="container"> *@
    @* <div class="row justify-content-between"> *@
@* <div class="col-1 col-md-2"/> *@
<div class="w-100 h-100 d-flex justify-content-center align-items-center">
    <div class="border rounded shadow-1 shadow-2 px-4 px-sm-5 min-width neumorphic-container rounded" style="min-width: 450px">
            <div class="bg-danger text-white neumorphic-container mt-3" asp-validation-summary="All"></div>
        <form asp-controller="Home" asp-action="Index" method="post" class="my-5">
            <div class="form-outline mb-5">
                <input type="email" id="form1Example1" class="form-control" asp-for="Email"/>
                <label class="form-label" for="form1Example1" asp-for="Email">Email address</label>
            </div>

            <div class="form-outline mb-4">
                <input type="password" id="form1Example2" class="form-control" asp-for="Password"/>
                <label class="form-label" for="form1Example2" asp-for="Password">Password</label>
            </div>

            <div class="row mb-5">
                <div class="col d-flex justify-content-between">
                    <div class="form-check">
                        <input
                            class="form-check-input"
                            type="checkbox"
                            value=""
                            id="form1Example3"
                            checked/>
                        <label class="form-check-label" for="form1Example3"> Remember me </label>
                    </div>
                </div>

                <div class="col d-flex justify-content-end">
                    <a href="#!">Forgot password?</a>
                </div>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn neumorphic-btn text-primary btn-block"
                    style="font-weight: 700; border: 1px solid #bcbcbc">Sign in</button>
        </form>
    </div>
</div>
