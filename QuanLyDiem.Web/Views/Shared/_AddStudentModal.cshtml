@model QuanLyDiem.Web.ViewModels.StudentManager
        <form id="addStudentForm" asp-action="StudentList" method="post">
          <div class="row justify-content-center">
            <div class="rounded px-4 py-4">
              <div class="d-flex align-items-start mb-4">
                <div class="form-outline">
                  <input asp-for="@Model.Student.LastName" type="text" id="questionInput" class="form-control">
                  <label class="form-label" for="questionInput">LastName</label>
                  <span asp-validation-for="@Model.Student.LastName" class="text-danger"></span>
                </div>
                <div class="form-outline" style="margin-left: 1.2rem !important;">
                  <input asp-for="@Model.Student.FirstName" type="text" id="form2Example1" class="form-control"/>
                  <label class="form-label" for="form2Example1">FirstName</label>
                </div>
              </div>
              <div class="d-flex mb-4">
                <div class="form-check" style="margin-right: 1.2rem !important;">
                  <input
                    asp-for="Student.Gender"
                    class="form-check-input"
                    type="radio"
                    name="flexRadioDefault"
                    id="flexRadioDefault1"
                    value="1"
                  />
                  <label class="form-check-label" for="flexRadioDefault1">Nam</label>
                </div>
                <div class="form-check">
                  <input
                    asp-for="Student.Gender"
                    class="form-check-input"
                    type="radio"
                    name="flexRadioDefault"
                    id="flexRadioDefault2"
                    checked
                    value="0"
                  />
                  <label class="form-check-label" for="flexRadioDefault2">Nữ</label>
                </div>
              </div>
              <div class="mb-4">
                <div class="form-outline mx-1">
                  <input asp-for="Student.PhoneNumber" type="text" id="questionInput" class="form-control">
                  <label class="form-label" for="questionInput">Số điện thoại</label>
                </div>
              </div>
              <div class="mb-4">
                <div class="form-outline mx-1">
                  <input asp-for="Student.Email" type="text" id="questionInput" class="form-control">
                  <label class="form-label" for="questionInput">Email</label>
                </div>
              </div>
              <div class="mb-4">
                <div class="form-outline mx-1">
                  <input asp-for="Student.Address" type="text" id="questionInput" class="form-control">
                  <label class="form-label" for="questionInput">Address</label>
                </div>
              </div>
              <div class="mb-4">
                <div class="form-outline mx-1">
                  <input asp-for="Student.Password" type="text" id="questionInput" class="form-control">
                  <label class="form-label" for="questionInput">Password</label>
                </div>
              </div>
              <div class="mb-4">
                <div class="form-outline mx-1">
                  <select asp-for="Student.Class" class="mySelect">
                    @foreach (var item in Model.ClassList)
                    { 
                      <option value=@item.ClassId>@item.ClassName</option>
                    }
                  </select>
                </div>
              </div>
            </div>
          </div>
        </form>
